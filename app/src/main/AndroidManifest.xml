        <!-- 注册广播接收者 -->
        <receiver android:name="com.androidtest.elements.BroadcastReceiverMonitor">
            <intent-filter>

                <!-- 拨打电话接收者 -->
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                <!-- 监听短信接收 -->
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <!-- 监听手机开机 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.REBOOT" />
                <!-- 注册自定义无序广播 -->
                <action android:name="com.custom.unorderBroadcast" />
            </intent-filter>
            <intent-filter>

                <!-- sd卡卸载接收者 -->
                <action android:name="android.intent.action.MEDIA_UNMOUNTED" />
                <!-- sd卡装载接收者 -->
                <action android:name="android.intent.action.MEDIA_MOUNTED" />

                <!-- 监听sd卡卸载和装载必须配置这个 -->
                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>

                <!-- 监听有应用安装了 -->
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <!-- 监听到应用卸载了 -->
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <!-- 要监听这两个广播必须要设置这个 -->
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <!-- 配置有序广播 -->
        <receiver android:name="com.androidtest.elements.BroadcastReceiverOrder1">

            <!-- priority优先级 建议-1000到1000，优先级越高首先接收到广播 -->
            <intent-filter android:priority="1000">
                <action android:name="com.custom.orderBroadcast" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.androidtest.elements.BroadcastReceiverOrder2">
            <intent-filter android:priority="500">
                <action android:name="com.custom.orderBroadcast" />
            </intent-filter>
        </receiver>
