<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.MapAndLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/GPS_location"
            layout="@layout/location_view"/>

        <include
            android:id="@+id/base_station_location"
            layout="@layout/location_view"/>

        <include
            android:id="@+id/net_location"
            layout="@layout/location_view"/>

        <include
            android:id="@+id/best_location"
            layout="@layout/location_view"/>

        <include
            android:id="@+id/s2c_location"
            layout="@layout/location_view"/>
    </LinearLayout>

    <include
        android:id="@+id/cover"
        layout="@layout/loading_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

</RelativeLayout>